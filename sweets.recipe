[DEFAULT]
name      = active-document

[Package]
project   = Server:Factory
implement = %(name)s
summary   = Active Record pattern to use Xapian as a "NoSQL replacement"
license   = GPLv3+
homepage  = http://wiki.sugarlabs.org/go/Sugar_Server_Kit/Active_Document

version   = 0.1
stability = developer

requires  = gevent

[Build]
install   = install -m 0755 -d %(DESTDIR)s/%(PYTHONSITEDIR)s &&
            cp -r active_document %(DESTDIR)s/%(PYTHONSITEDIR)s/ &&
            install -m 0755 -d %(DESTDIR)s/%(DATADIR)s/doc/%(name)s &&
            cp AUTHORS COPYING HACKING README TODO %(DESTDIR)s/%(DATADIR)s/doc/%(name)s/ &&
            true
